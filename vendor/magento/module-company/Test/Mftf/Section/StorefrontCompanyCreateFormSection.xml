<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="StorefrontCompanyCreateFormSection">
        <element name="companyName" type="input" selector="#company_name" timeout="30"/>
        <element name="companyEmail" type="input" selector="#company_email" timeout="30"/>
        <element name="streetAddress" type="input" selector="//input[contains(@name, 'company[street][0]')]" timeout="30"/>
        <element name="city" type="input" selector="#city" timeout="30"/>
        <element name="country" type="select" selector="#country_id" timeout="30"/>
        <element name="region" type="select" selector="#region_id" timeout="30"/>
        <element name="postcode" type="input" selector="#postcode" timeout="30"/>
        <element name="telephone" type="input" selector="#telephone" timeout="30"/>
    </section>
    <section name="StorefrontCompanyCreateFormCompanyAdminSection">
        <element name="adminEmail" type="input" selector="#email_address" timeout="30"/>
        <element name="adminFirstName" type="input" selector="#firstname" timeout="30"/>
        <element name="adminLastName" type="input" selector="#lastname" timeout="30"/>
    </section>
    <section name="StorefrontCompanyCreateMainSection">
        <element name="submit" type="button" selector="button[title=Submit]" timeout="30"/>
    </section>
</sections>

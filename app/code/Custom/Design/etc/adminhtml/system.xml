<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="custom_config" translate="label" sortOrder="10">
            <label>Custom config</label>
        </tab>
        <section id="custom_config_section" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Custom Setting</label>
            <tab>custom_config</tab>
            <resource>Custom_Design::customsetting_configuration</resource>
            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Configuration</label>

                <field id="welcome_msg" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Welcome message</label>
                    <comment>Welcome message</comment>
                    <frontend_model>Custom\Design\Block\Adminhtml\System\Config\Date</frontend_model>
                </field>

                <field id="welcome_msg2" translate="label" type="text" sortOrder="2" showInDefault="2" showInWebsite="2" showInStore="2">
                    <label>Welcome Text</label>
                    <comment>Welcome text</comment>
                </field>

            </group>
        </section>
    </system>
</config>
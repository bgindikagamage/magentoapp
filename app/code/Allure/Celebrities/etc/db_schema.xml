<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    
    <table name="Allure_Celebrity">
        <column xsi:type="int" name="id" unsigned="true" identity="true" nullable="false" comment="celebrity id"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="celebrityName"/>
        <column xsi:type="varchar" name="image" nullable="false" length="255" comment="Image"/>
        <column xsi:type="text" name="description" nullable="false" comment="Description"/>
        <column xsi:type="varchar" name="url" nullable="false" comment="Url"/>
        <column xsi:type="smallint" name="status" nullable="false" default="0" comment="Status"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
            comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
            comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
    
</schema>